@{
    ViewData["Title"] = "Product Filter";
    var category = (string?)Context.Request.RouteValues["category"] ?? "(none)";
    var priceRange = (string?)Context.Request.RouteValues["priceRange"] ?? "(none)";
}
<div class="p-4 bg-white rounded shadow-sm">
    <h1 class="h4 mb-3">Filter Products</h1>
    <p>Showing results for:</p>
    <ul>
        <li><strong>Category:</strong> @category</li>
        <li><strong>Price Range:</strong> @priceRange</li>
    </ul>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>
</div>
