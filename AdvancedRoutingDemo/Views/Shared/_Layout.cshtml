@{
    var title = ViewData["Title"] as string ?? "Advanced Routing Demo";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">AdvancedRoutingDemo</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Products/electronics/1">Sample Product</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Products/Filter/electronics/0-999">Filter</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Users/john/Orders">User Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Dashboard/admin">Dashboard</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-4">
        <small>Advanced Routing Demo • @DateTime.Now.Year</small>
    </footer>
</body>
</html>
