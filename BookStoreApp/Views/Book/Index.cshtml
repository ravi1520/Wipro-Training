@model IEnumerable<BookstoreApp.Models.Book>

<h2>Book List</h2>
<a asp-action="Create" class="btn btn-primary">Add New Book</a>
<table class="table table-bordered">
    <tr>
        <th>Title</th><th>Author</th><th>Price</th><th>Quantity</th><th>Actions</th>
    </tr>
@foreach (var book in Model)
{
    <tr>
        <td>@book.Title</td>
        <td>@book.Author</td>
        <td>@book.Price</td>
        <td>@book.Quantity</td>
        <td>
            <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> |
            <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
        </td>
    </tr>
}
</table>
