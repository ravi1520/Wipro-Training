@model FeedbackPortalApp.Models.Feedback

<h2>Submit Feedback</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label>Rating</label>
        <star-rating rating-value="3"></star-rating> <!-- Custom TagHelper -->
        <span asp-validation-for="Rating"></span>
    </div>

    <div>
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments"></textarea>
        <span asp-validation-for="Comments"></span>
    </div>

    <button type="submit">Submit</button>
</form>
<a asp-action="Index">View All Feedback</a>
