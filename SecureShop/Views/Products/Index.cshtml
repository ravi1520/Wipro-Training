@model IEnumerable<SecureShop.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h2>Products</h2>

<table class="table">
    <thead><tr><th>Name</th><th>Price</th><th></th></tr></thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>   <!-- Razor encodes by default; safe -->
            <td>@p.Price</td>
            <td><a asp-action="Details" asp-route-id="@p.Id">Details</a></td>
        </tr>
    }
    </tbody>
</table>
