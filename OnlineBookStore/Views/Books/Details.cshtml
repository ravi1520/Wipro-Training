@model OnlineBookStore.Models.Book
@{
    ViewData["Title"] = "Book Details";
}
<h2>Book Details</h2>
<div class="card my-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Title</dt><dd class="col-sm-10">@Model.Title</dd>
            <dt class="col-sm-2">Author</dt><dd class="col-sm-10">@Model.Author</dd>
            <dt class="col-sm-2">ISBN</dt><dd class="col-sm-10">@Model.ISBN</dd>
            <dt class="col-sm-2">Price</dt><dd class="col-sm-10">â‚¹@Model.Price</dd>
        </dl>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
        <a class="btn btn-primary"
           asp-controller="Cart" asp-action="AddToCart"
           asp-route-id="@Model.Id" asp-route-title="@Model.Title" asp-route-price="@Model.Price">
            Add to Cart
        </a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
</div>
