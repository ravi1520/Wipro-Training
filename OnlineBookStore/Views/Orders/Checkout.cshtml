@model OnlineBookStore.Models.Order

<h2>Checkout</h2>

<form asp-action="Checkout" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ShippingAddress" class="form-label"></label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PaymentMethod" class="form-label"></label>
        <select asp-for="PaymentMethod" class="form-select">
            <option>Credit Card</option>
            <option>Debit Card</option>
            <option>UPI</option>
            <option>Cash on Delivery</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Place Order</button>
    </div>
</form>
