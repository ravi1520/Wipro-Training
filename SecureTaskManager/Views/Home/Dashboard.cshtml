@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<h2>Dashboard</h2>
<p>Welcome, @User.Identity?.Name!</p>

@if (User.IsInRole("Admin"))
{
    <a asp-controller="Admin" asp-action="ManageTasks" class="btn btn-warning">Go to Admin Task Management</a>
}
else if (User.IsInRole("User"))
{
    <a asp-controller="User" asp-action="TaskList" class="btn btn-info">Go to My Task List</a>
}
