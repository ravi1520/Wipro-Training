@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>
<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author?.Name</p>
    <p><strong>Genre:</strong> @Model.Genre?.Name</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
